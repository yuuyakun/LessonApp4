<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="posts-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>

        <p>
          <%= @page.title %>
        </p>
        <div class="post-time">
          <%= @page.created_at %>
        </div>

        <% if Like.find_by(user_id: @current_user.id, post_id: @page.id) %>
          <%= link_to("likes/#{@page.id}/destroy",{method: "post"}) do %>
            <span class="fa fa-heart like-btn-unlike"></span>
          <% end %>
        <% else %>
          <%= link_to("/likes/#{@page.id}/create",{method: "post"}) do %>
            <span class="fa fa-heart like-btn"></span>
          <% end %>
        <% end %>

        <%= @likes_count %>

      <% if @page.user_id == @current_user.id %>
        <div class="post-menus">
        <%= link_to("編集", "/pages/#{@page.id}/edit") %>
        <%= link_to("削除", "/pages/#{@page.id}/destroy",{method: "post"}) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
