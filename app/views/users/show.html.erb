<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul>
      <li class="active"><%= link_to("投稿","/users/#{@user.id}") %></li>
      <li><%= link_to("いいね！","/users/#{@user.id}/likes") %></li>
    </ul>

    <%= @user.pages.each do |page| %>
    <div class="posts-index-item">
      <div class="post-left">
        <img src="<%= "/user_images/#{page.user.image_name}" %>">
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= link_to(page.user.name,"/users/#{page.user.id}") %>
        </div>
        <%= link_to(page.title,"/pages/#{page.id}") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
